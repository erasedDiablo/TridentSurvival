
local parts = {
    game.Workspace.Const.Ignore.FPSArms.Fake.c_LeftLowerArm,
    game.Workspace.Const.Ignore.FPSArms.Fake.c_RightLowerArm,
    game.Workspace.Const.Ignore.FPSArms.LeftHand,
    game.Workspace.Const.Ignore.FPSArms.RightHand
}

local RunService = game:GetService("RunService")
local function updateColors(deltaTime)
    local time = tick() * 0.4 -- Set speed to 0.4 for smooth flow
    local r = (math.sin(time) * 0.5 + 0.5) * 0.7 + 0.3 -- Smoother color transitions
    local g = (math.sin(time + 2.094) * 0.5 + 0.5) * 0.7 + 0.3
    local b = (math.sin(time + 4.188) * 0.5 + 0.5) * 0.7 + 0.3
    local color = Color3.new(r, g, b)

    for _, part in ipairs(parts) do
        if part and part:IsA("BasePart") then
            part.Material = Enum.Material.ForceField
            part.Color = color -- Use Color directly for smoother interpolation
        end
    end
end

RunService:BindToRenderStep("RainbowEffect", Enum.RenderPriority.Camera.Value + 1, updateColors)
